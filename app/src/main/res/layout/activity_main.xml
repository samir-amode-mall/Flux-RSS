<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ProgressBar pour indiquer le chargement -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Titre de l'article -->
    <TextView
        android:id="@+id/imageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:text="Titre de l'article"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Date de publication -->
    <TextView
        android:id="@+id/imageDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageTitle"
        android:layout_marginBottom="8dp"
        android:text="Date de publication"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp" />

    <!-- Image associée à l'article -->
    <ImageView
        android:id="@+id/imageDisplay"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/imageDate"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Image de l'article" />

    <!-- Description de l'article -->
    <TextView
        android:id="@+id/imageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDisplay"
        android:layout_marginBottom="16dp"
        android:text="Description de l'article"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Bouton précédent -->
    <Button
        android:id="@+id/buttonPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageDescription"
        android:layout_marginEnd="8dp"
        android:text="Précédent" />

    <!-- Bouton suivant -->
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/buttonPrev"
        android:layout_alignBaseline="@id/buttonPrev"
        android:layout_marginStart="8dp"
        android:text="Suivant" />

</RelativeLayout>
